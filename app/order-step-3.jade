          // Agreement checkbox
          .row
            .small-12.columns              
              input(type="checkbox", name="", id="terms-agreement-check", value="I agree with the Terms and Conditions and Coverage Policy", tabindex="23", required)
              label(for="terms-agreement-check") I have read and agree with the <a href="#">Terms and Conditions</a> and <a href="#">Coverage Policy</a>

    
      // Credit Card Information 
      div.row#cc-btn
        .small-4.small-centered.columns
          input(type="submit", value="Complete Order", class="button radius expand", tabindex="24")
        
      // Paypal Button 
      div.row#pp-btn
        .small-8.small-centered.columns
          input(type="submit", value="Complete Order using your Paypal Account", class="button radius expand", tabindex="24")

        // --- End: Order Information ---        
      

block append-to-scripts
  script.
    $( document ).ready(function() {
      $( ".credit-cards").click(function() {
        if ($('#paypal-payment').prop('checked') == true) {
         $('#pp-btn').css("display","block");
         $('#cc-btn').css("display","none");
         $('#cc-form').css("display","none");
        }
        else{
         $('#pp-btn').css("display","none");
         $('#cc-btn').css("display","block");
         $('#cc-form').css("display","block");
        }
      });      
    });    