extends layout-template

block content
  // Page Title
  h1.text-center Complete order

  // Table Cart
  .row
    table.cart.small-12.columns.flat-bottom
      thead
        tr
          th Search Details
          th Unit Price
          th Quantity
          th Price
          th Edit/Action
      tbody
        tr
          td.text-left
            p Alaska Criminal Record Search
            ul.small-block-grid-2
              li
                span.parameters-title First Name
                br
                | Thomas
              li    
                span.parameters-title Last Name
                br
                | Green
              li
                span.parameters-title State
                br
                | AK
              li
                span.parameters-title Date of Birth
                br
                | 03/12/19 79

          td $18.95
          td 1
          td $18.95
          td: a(href="#", name="Order-number", class="btn-remove")
                  i.fa.fa-times-circle
                  | Remove

    .cart-expansion.small-12.columns
      .small-6.columns.small-centered
        a.button.green.radius.expand Add an additional person to your search

  // Order Information 
  .row.order-information.small-6.columns.small-centered
    form(action="", data-abide)
      // Billing Information
      .row.billing-info
        .row
          h3.small-12.columns Personal Information
        
        .row
            //Left Column
            .small-6.columns
              div
                label 
                  | First Name
                  input(type="text", name="personal-info-first-name", tabindex="1", required, pattern='alpha')
                small.error This Name isn't valid. Please, try again.
              
              div
                label
                  | Email
                  input(type="email", id="email-field", name="personal-info-email", tabindex="3", required, pattern="email")
                small.error This Email isn't valid. Please, try again.
              
              div
                label
                  | Billing Address 1
                  input(type="text", name="personal-info-address-1", tabindex="5", required)
                small.error This Address isn't valid. Please, try again.
              
              div
                label
                  | City
                  input(type="text", name="personal-info-city", tabindex="7", required, pattern='[a-z A-Z]+')
                small.error This City isn't valid. Please, try again.
              
              div
                label
                  | Zip Code
                  input(type="text", name="personal-info-zip", tabindex="9", required)
                small.error This Zip Code isn't valid. Please, try again.
                
            //Right Column
            .small-6.columns
              div
                label
                  | Last Name
                  input(type="text", name="personal-info-last-name", tabindex="2", required, pattern='alpha')
                small.error This Name isn't valid. Please, try again.
              
              div
                label
                  | Email&nbsp;(Confirm)
                  input(type="email", name="personal-info-email", tabindex="4", required, data-equalto="email-field")
                small.error Please, type the exact same email you entered before.
              
              div
                label
                  | Billing Address 2
                  input(type="text", name="personal-info-address-2", tabindex="6")
              
              div
                label 
                  | State
                  select(name="personal-info-state", tabindex="8", required)
                    option(value="", disabled, selected) Please Select
                    option(value="AL") Alabama
                    option(value="AK") Alaska
                    option(value="AZ") Arizona
                    option(value="AR") Arkansas
                    option(value="CA") California
                    option(value="CO") Colorado
                    option(value="CT") Connecticut
                    option(value="DE") Delaware
                    option(value="DC") District Of Columbia
                    option(value="FL") Florida
